{
  "manifest_version": 3,
  "name": "Refine",
  "version": "0.2.0",
  "description": "A browser extension to refine and customize your web browsing by hiding unwanted content.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.mycareersfuture.gov.sg/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
